# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4.1

# Backend Security (Optional)
BACKEND_API_KEY=your_optional_api_key_here

# Refinement Settings
AGGRESSIVENESS=Auto
RANDOM_SEED=
BATCH_PACE_DELAY=0.5
MIN_WORD_RATIO=0.8
TARGET_SCANNER_RISK=25.0

# Google Drive Configuration
# Option 1: Use service account file (recommended for production)
GOOGLE_SERVICE_ACCOUNT_FILE=config/google_credentials.json

# Option 2: Use OAuth (for development)
# GOOGLE_CREDENTIALS_FILE=config/credentials.json
# GOOGLE_TOKEN_FILE=config/token.json

# Pipeline Configuration
REFINER_MAX_INPUT_TOKENS=0
REFINER_DOMAIN_CHUNK=true
REFINER_PLACEHOLDERS=false

# API Configuration
API_MAX_RETRIES=6
API_BACKOFF_START=1.0
API_BACKOFF_CAP=8.0

# Output Directories
# If relative, it's resolved relative to backend directory. Default: backend/data/output
# Examples:
#   REFINER_OUTPUT_DIR=data/output          (relative to backend/)
#   REFINER_OUTPUT_DIR=/app/data/output     (absolute path)
#   REFINER_OUTPUT_DIR=C:\data\output       (absolute Windows path)
REFINER_OUTPUT_DIR=data/output

# Logging
DEBUG=false

# Cleanup
DISABLE_CLEANUP=0

